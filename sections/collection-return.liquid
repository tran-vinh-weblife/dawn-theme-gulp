<div class="return-section color-scheme-{{ section.settings.color_scheme }}">
  <div class="page-width center">
    {% if collection %}
    <a href="{% if collection.handle == 'frontpage' %}/{% else %}{{ collection.url }}{% endif %}" class="btn return-link">
      {{ 'products.general.collection_return' | t: collection: collection.title }}
    </a>
    {% else %}
    <button class="button return-link" id="js-button-back">
      {{ 'products.product.collection_return' | t: collection: collection.title }}
    </button>
    {% endif %}
  </div>
</div>

<script>

document.getElementById('js-button-back').onclick = function(){
  window.history.back();
}
</script>

{% schema %}
  {
    "name": "Back to collection",
    "settings": [
      {
        "type": "paragraph",
        "content": "This section will only appear when you are on a product page that was reached through a collection"
      },
      {
        "type": "select",
        "id": "color_scheme",
        "label": "Color scheme",
        "default": "2",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "1",
            "label": "1"
          },
          {
            "value": "2",
            "label": "2"
          },
          {
            "value": "3",
            "label": "3"
          }
        ]
      }
    ]
  }
{% endschema %}
